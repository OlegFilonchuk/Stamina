{
  "compilerOptions": {
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noEmit": true,
    "jsx": "react",
    "outDir": "build/dist",
    "baseUrl": "./",
    "paths": {
      "@components/*": ["./src/components/*"],
      "@page/*": [ "./src/page/*" ],
      "@redux/*": [ "./src/redux/*" ],
      "@util/*": [ "./src/util/*" ],
      "@webApi/*": [ "./src/webApi/*" ]
    }
  },
  "include": [
    "./src/**/*.ts",
    "./src/**/*.tsx",
    "./src/**/*.js"
  ],
  "exclude": [
    "node_modules",
    "build",
    "scripts",
    "config",
    "webpack",
    "jest"
  ]

}